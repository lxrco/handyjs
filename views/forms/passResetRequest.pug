form(
  name='userForgotPassword'
  id= 'userForgotPassword'
  action='/handy/forgotpassword'
  method='post'
  role='form'
  )

  include ../components/csrf.pug

  .form-group.row
    label.col-form-label.col-1(for='userEmail') Email
    .col-4
      input.form-control(
        type='email'
        id='userForgotPassword_userEmail'
        name='userEmail'
        placeholder='e.g. name@gmail.com'
        required
      )

  .form-group.row
    .offset-1.col-4
      button.btn.btn-primary(type='submit') Reset my password