- 
  var destination = ''
  if (pageInfo.other.destination){
    destination = '?destination=' + pageInfo.other.destination
  }
  
form(
  name='userLogin'
  id= 'userLogin'
  action='/handy/login' + destination
  method='post'
  role='form'
  )

  include ../components/csrf.pug

  .form-group.row
    label.col-form-label.col-1(for='userEmail') Email
    .col-4
      input.form-control(type='email', id='userLogin_userEmail', name='userEmail', placeholder='e.g. name@gmail.com', required)

  .form-group.row
    label.col-form-label.col-1(for='userPassword') Password
    .col-4
      input.form-control(type='password', id='userLogin_userPassword', name='userPassword', placeholder='your password', required)

  .form-group.row
    .col-offset-1.col-4
      button.btn.btn-primary(type='submit') Sign in 